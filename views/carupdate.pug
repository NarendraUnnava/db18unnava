extends layout

block content
  h1= title

  if(toShow == null)
    h2 No instance to update
  else
    - let carid = toShow._id
    - let car_manufacturer = toShow.manufacturer
    - let model = toShow.model
    - let carcost = toShow.cost
    - let actionid = "/resource/car/" + carid
    script let actionid = "#{actionid}"
    div.row(class='mb-2')
    div.mr-1 ID is 
      span(style="color:red")  #{carid}
    form(id='CarForm', action= actionid, method="PUT")
      div.form-group
      div(class="row g-3 align-items-center")
        div(class="col-1")
          label.carAttr(for='car_manufacturer',class="col-form-label") Car Manufacturer
        div(class="col-auto")
          input#car_type(type='text', name='car_type',class="form-control", value=car_manufacturer)
      div.form-group
      div(class="row g-3 align-items-center")
        div(class="col-1")
          label.carAttr(for='model',class="col-form-label") Car model
        div(class="col-auto")
          input#model(type='text', name='quantity',class="form-control", value=model)
      div.form-group
      div(class="row g-3 align-items-center")
        div(class="col-1")
          label.carAttr(for='cost',class="col-form-label") Car cost
        div(class="col-auto")
          input#cost(type='number', name='cost',class="form-control", value=carcost)
      input(class="btn btn-danger m-2" type="submit")
        //- button(class="btn btn-danger m-2" onclick="deleteOnid()") Delete
      button(class="btn btn-secondary m-2" onclick="cancel()") Cancel
        
  script.
    document.forms['CarForm'].addEventListener('submit', (event) => {
    event.preventDefault();
    // TODO do something here to show user that form is being submitted
    fetch(event.target.action, {
    method: 'PUT',
    body: new URLSearchParams(new FormData(event.target)) // event.target is the form
    }).then((resp) => {
    return resp.json(); // or resp.text() or whatever the server sends
    }).then((body) => {
    alert("Save succeded")
    // TODO handle body
    }).catch((error) => {
    // TODO handle error
    alert("Save failed " + error )
    });
    });